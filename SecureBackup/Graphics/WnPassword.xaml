<controls:AdonisWindow x:Class="SecureBackup.Graphics.WnPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
        Title="Password Manager" Width="300" SizeToContent="Height" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <PasswordBox Grid.Column="0" Margin="10,10,10,10" x:Name="PasswordText" Height="30" MaxLength="16"/>
        <Button Grid.Column="1" Margin="0,10,10,10" Content="Continue" IsDefault="True" Click="Continue"/>
    </Grid>
</controls:AdonisWindow>